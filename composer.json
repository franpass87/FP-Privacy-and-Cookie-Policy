{
    "name": "francescopasseri/fp-privacy-cookie-policy",
    "description": "FP Privacy and Cookie Policy WordPress plugin.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.0"
    },
    "autoload": {
        "psr-4": {
            "FP\\Privacy\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.11",
        "friendsofphp/php-cs-fixer": "^3.58",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "config": {
        "platform": {
            "php": "8.0.0"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "build": [
            "rm -rf vendor",
            "@composer install --no-dev --prefer-dist --no-interaction --optimize-autoloader",
            "composer dump-autoload -o --classmap-authoritative"
        ],
        "sync:author": [
            "node tools/sync-author-metadata.js --apply=true"
        ],
        "sync:docs": [
            "node tools/sync-author-metadata.js --docs --apply=true"
        ],
        "changelog:from-git": [
            "npx --yes conventional-changelog -p angular -i CHANGELOG.md -s || true"
        ]
    },
    "authors": [
        {
            "name": "Francesco Passeri",
            "email": "info@francescopasseri.com",
            "homepage": "https://francescopasseri.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://francescopasseri.com",
    "support": {
        "issues": "https://francescopasseri.com"
    }
}
